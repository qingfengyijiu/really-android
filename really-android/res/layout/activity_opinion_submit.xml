<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_marginTop="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:id="@+id/layout_comment_truth_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            
            <LinearLayout
	            android:layout_width="63dip"
	            android:layout_height="match_parent"
	            android:gravity="center_horizontal"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/imageview_opinion_fake"
	                android:layout_width="30dip"
	                android:layout_height="30dip"
	                android:scaleType="fitXY"
	                android:src="@drawable/opinion_fake_unselected" />
	
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="20dip"
	                android:gravity="center"
	                android:text="假"
	                android:textSize="6pt" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="63dip"
	            android:layout_height="match_parent"
	            android:gravity="center_horizontal"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/imageview_opinion_dubious"
	                android:layout_width="30dip"
	                android:layout_height="30dip"
	                android:scaleType="fitXY"
	                android:src="@drawable/opinion_dubious_unselected" />
	
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="20dip"
	                android:gravity="center"
	                android:text="可疑"
	                android:textSize="6pt" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="63dip"
	            android:layout_height="match_parent"
	            android:gravity="center_horizontal"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/imageview_opinion_indifferent"
	                android:layout_width="30dip"
	                android:layout_height="30dip"
	                android:scaleType="fitXY"
	                android:src="@drawable/opinion_indifferent_unselected" />
	
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="20dip"
	                android:gravity="center"
	                android:text="无所谓"
	                android:textSize="6pt" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="63dip"
	            android:layout_height="match_parent"
	            android:gravity="center_horizontal"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/imageview_opinion_credible"
	                android:layout_width="30dip"
	                android:layout_height="30dip"
	                android:scaleType="fitXY"
	                android:src="@drawable/opinion_credible_unselected" />
	
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="20dip"
	                android:gravity="center"
	                android:text="可信"
	                android:textSize="6pt" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="63dip"
	            android:layout_height="match_parent"
	            android:gravity="center_horizontal"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/imageview_opinion_believable"
	                android:layout_width="30dip"
	                android:layout_height="30dip"
	                android:scaleType="fitXY"
	                android:src="@drawable/opinion_believable_unselected" />
	
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="20dip"
	                android:gravity="center"
	                android:text="信"
	                android:textSize="6pt" />
	        </LinearLayout>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:id="@+id/layout_comment_relationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
            
            <TextView
                    android:id="@+id/textview_relationship_litigant"
                    android:layout_width="65dip"
                    android:layout_height="30dip"
                    android:gravity="center"
                    android:text="当事人"
                    android:textColor="#D4CED2"
                    android:textSize="6pt" 
                    android:layout_marginRight="3dip"
                    android:background="@drawable/opinion_relationship_unselected"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/textview_relationship_insider"
                    android:layout_width="65dip"
                    android:layout_height="30dip"
                    android:gravity="center"
                    android:text="知情人"
                    android:textColor="#D4CED2"
                    android:textSize="6pt"
                    android:layout_marginRight="3dip"
                    android:background="@drawable/opinion_relationship_unselected"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textview_relationship_party"
                    android:layout_width="65dip"
                    android:layout_height="30dip"
                    android:gravity="center"
                    android:text="关系人"
                    android:textColor="#D4CED2"
                    android:textSize="6pt"
                    android:layout_marginRight="3dip"
                    android:background="@drawable/opinion_relationship_unselected"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textview_relationship_industry"
                    android:layout_width="65dip"
                    android:layout_height="30dip"
                    android:gravity="center"
                    android:text="行业人"
                    android:textColor="#D4CED2"
                    android:textSize="6pt"
                    android:layout_marginRight="3dip"
                    android:background="@drawable/opinion_relationship_unselected"
                    android:scaleType="fitXY" />
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_marginTop="10dip">
        
        <EditText
            android:id="@+id/edittext_opinion_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textSize="6pt"/>
        
    </RelativeLayout>
    
</LinearLayout>